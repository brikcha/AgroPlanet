{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <div class="m-3">
        <h1>Catégorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
            <tr>
                <th>Liste de plantes</th>
                <td>
                    {% for plante in categorie.plantes %}
                        <p>{{ plante.nom }}</p>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('categorie_index') }}" class="btn btn-dark">{% trans %}revenir à la liste{% endtrans %}</a>


    </div>

{% endblock %}
