{% extends 'base.html.twig' %}

{% block title %}Maladies{% endblock %}

{% block body %}
    <div class="m-3">
        <h1>Maladies</h1>


        <div class="row">
            <div class="col-6">
                <div class="m-3">
                    <a href="{{ path('maladie_new') }}" class="btn btn-outline-primary"><i class="far fa-plus-square"></i>
                        {% trans %} Ajouter maladie {% endtrans %}</a>
                </div>
            </div>
            <div class="col-6">
                {{ form_start(form) }}
                <div class="form-row align-items-center" >
                    <div class="col-4">
                        {{ form_widget(form.name) }}
                    </div>

                    <div class="form-group col-4 mt-3">
                        <button type="submit" class="btn btn-success">Rechercher</button>
                    </div>

                </div>
                {{ form_end(form) }}
            </div>
        </div>




        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Maladie</th>
                <th>Solution</th>
                <th>Description</th>
                <th>Historique</th>
                <th>Informations</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for maladie in maladies %}
                <tr>
                    <td>{{ maladie.id }}</td>
                    <td>{{ maladie.nom }}</td>
                    <td>{{ maladie.solution }}</td>
                    <td>{{ maladie.description }}</td>
                    <td>{{ maladie.historique }}</td>
                    <td>
                        <a href="{{ path('maladie_show', {'id': maladie.id}) }}" class="btn btn-outline-dark">
                            Informations
                        </a>
                    </td>
                    <td>

                        {% if is_granted('ROLE_EDITOR') %}
                            <a href="{{ path('maladie_edit', {'id': maladie.id}) }}" class="btn btn-outline-warning"><i
                                        class="fas fa-pen"></i></a>
                            {{ include('maladie/_delete_form.html.twig') }}
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{% trans %}aucune donn√©es{% endtrans %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
